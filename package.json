{
	"name": "tidy-explorer",
	"displayName": "tidy-explorer",
	"description": "Tools for tidying up vscode explorer",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Tidy Explorer",
			"properties": {
				"tidyExplorer.pockets": {
					"type": "array",
					"scope": "resource",
					"description": "Definition of file Pockets",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"selectors": {
								"type": "array",
								"items": {
									"type": "string"
								}
							}
						}
					}
				}
			}
		},
		"views": {
			"explorer": [
				{
					"id": "tidyExplorerPockets",
					"name": "File Groups"
				},
				{
					"id": "tidyExplorerFileView",
					"name": "Tidy Explorer"
				}
			]
		},
		"commands": [
			{
				"command": "tidyExplorer.addToFileExcludes",
				"title": "Hide in explorer",
				"icon": "$(eye-closed)"
			},
			{
				"command": "tidyExplorer.removeFromFileExcludes",
				"title": "Un-hide in explorer",
				"icon": "$(eye)"
			},
			{
				"command": "tidyExplorer.addToTidyView",
				"title": "Show in Tidy Explorer",
				"icon": "$(add)"
			},
			{
				"command": "tidyExplorer.removeFromTidyView",
				"title": "Remove from Tidy Explorer",
				"icon": "$(remove)"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "tidyExplorer.addToFileExcludes",
					"group": "inline",
					"when": "view == tidyExplorerPockets && viewItem =~ /files\\-x\\-(unset|mixed)/"
				},
				{
					"command": "tidyExplorer.removeFromFileExcludes",
					"group": "inline",
					"when": "view == tidyExplorerPockets && viewItem =~ /files\\-x\\-(set|mixed)/"
				},
				{
					"command": "tidyExplorer.addToTidyView",
					"group": "inline",
					"when": "view == tidyExplorerPockets"
				},
				{
					"command": "tidyExplorer.removeFromTidyView",
					"group": "inline",
					"when": "view == tidyExplorerPockets"					
				}

			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}