{
  "name": "tidy-explorer",
	"displayName": "tidy-explorer",
	"description": "Tools for tidying up vscode explorer",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Tidy Explorer",
			"properties": {
				"tidyExplorer.pockets": {
					"type":"array",
					"description": "Definition of file Pockets",
					"items": {
						"type":"object",
						"properties": {
							"name":{"type":"string"},
							"selectors": {
								"type":"array",
								"items": {
									"type":"object",
									"properties": {
										"workspaceFolder": {"type": "string"},
										"basePath": {"type":"string"},
										"includeGlob": {"type":"string"}
									},
									"required": ["includeGlob"]
								}
							}
						}
					}


				}
			}
		},
		"views": {
			"explorer": [
				{
					"id":"tidyExplorerPockets",
					"name": "File Groups"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
